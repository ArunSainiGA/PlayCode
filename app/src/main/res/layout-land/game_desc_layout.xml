                                        <!--android:layout_height="match_parent"-->
                                        <!--android:layout_gravity="center_vertical"-->
                                        <!--android:layout_marginBottom="0dp"-->
                                        <!--android:isIndicator="true"-->
                                        <!--android:numStars="4"-->
