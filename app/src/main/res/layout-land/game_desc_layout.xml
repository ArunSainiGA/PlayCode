                                <!--android:textSize="25sp" />-->

                            <RelativeLayout
                                android:id="@+id/cat_rat_container"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3">

                                <!--<TextView-->
                                    <!--android:id="@+id/game_desc_cat"-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="25dp"-->
